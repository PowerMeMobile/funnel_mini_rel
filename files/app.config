[
 %% Funnel config
 {funnel_mini,
  [{amqp_username,         <<"guest">>},
   {amqp_password,         <<"guest">>},
   {amqp_host,             "localhost"},
   {amqp_port,             5672},
   {amqp_virtual_host,     <<"/">>}]},

 %% Billy config
 {billy_client,
  [{enabled, false},
   {host, "127.0.0.1"},
   {port, 16062},
   {username, <<"funnel">>},
   {password, <<"funnel">>}]},

%% Lager config
 {lager,
  [{handlers,
    [{lager_console_backend, info},
     {lager_file_backend,
      [{"log/error.log", error, 10485760, "$D0", 5},
       {"log/console.log", info, 10485760, "$D0", 5}]}]},
   {crash_log, "log/crash.log"},
   {crash_log_msg_size, 65536},
   {crash_log_size, 10485760},
   {crash_log_date, "$D0"},
   {crash_log_count, 5},
   {error_logger_redirect, true}]},

 %% Mnesia config
 {mnesia,
  [{dir, "data/mnesia"}]},

 %% SASL config
 {sasl,
  [{sasl_error_logger, {file, "{{sasl_error_log}}"}},
   {errlog_type, error},
   {error_logger_mf_dir, "{{sasl_log_dir}}"}, % Log directory
   {error_logger_mf_maxbytes, 10485760}, % 10 MB max file size
   {error_logger_mf_maxfiles, 5}]}, % 5 files max

 %% SNMP config
 {snmp,
  [{agent,
    [{config, [{dir, "etc/snmp"}]},
     {db_dir, "data/snmp"}]}]}
].
