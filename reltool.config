{sys, [
	{lib_dirs, ["deps"]},
	{rel, "funnel", "1", [
		kernel,
		stdlib,
		sasl,
		lager,
		mnesia,
		snmp,
		os_mon,
		common_lib,
		amqp_client,
		gproc,
		funnel_mini
	]},
	{rel, "develop", "", [
		kernel,
		stdlib,
		sasl,
		lager,
		mnesia,
		snmp,
		os_mon,
		common_lib,
		amqp_client,
		gproc,
		sync,
		funnel_mini
	]},
	{rel, "start_clean", "", [
		kernel,
		stdlib
	]},
	{boot_rel, "funnel"},
	{profile, embedded},
	{excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)"]},
	{excl_archive_filters, [".*"]},
	{app, runtime_tools, [{incl_cond, include}]},
	{app, entop, [{incl_cond, include}]},
	{app, eper, [{incl_cond, include}]},
    {app, recon, [{incl_cond, include}]},
	{app, sync, [{incl_cond, include}]}
]}.

{target_dir, "funnel_mini"}.

{overlay_vars, "vars.config"}.

{overlay, [
	{mkdir, "etc"},
	{mkdir, "data/tokyo"},
	{mkdir, "data/snmp"},
	{mkdir, "log/sasl"},
	{mkdir, "log/smpp"},
	{mkdir, "mibs"},
	{copy, "deps/funnel_mini/mibs/FUNNEL-MIB.mib", "mibs"},
	{copy, "files/erl", "{{erts_vsn}}/bin/erl"},
	{copy, "files/nodetool", "{{erts_vsn}}/bin/nodetool"},
	{copy, "files/snmp", "etc/snmp"},
	{copy, "files/mnesia", "data"},
	{template, "files/app.config", "etc/app.config"},
	{template, "files/vm.args", "etc/vm.args"},
	{template, "files/funnel", "bin/funnel"}
]}.
